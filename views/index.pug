extends layout

block head
  script(src='javascripts/dropzone.js')
  script(src='javascripts/dropzone_custom.js')
  meta(name="max-up-size", value= config.MAX_UPLOAD_SIZE )
  meta(name="site-href", value= config.FILE_URL )
  meta(name="upload-url", value= config.UPLOAD_URL )

block content
  .template.hidden
    .row
      .u-pull-right.status
        span.remove
          i.fa.fa-times.fa-fw
        .file-progress.progress-outer(role='progressbar')
          .progress-inner(style='width: 0%;' data-dz-uploadprogress='')
      .u-pull-right.link.hidden
        a.link-href(target="_blank", href="")
      .preview.u-pull-left
        // Default 1x1 transparent gif
        img(data-dz-thumbnail='' src="images/file.png")
      div
        span.name(data-dz-name='')
        | &nbsp; (
        span.size(data-dz-size='')
        | )
        br
        span.error(data-dz-errormessage='')

  // Summary block
  .summary
    .container
      .row
        h2.title
          b= config.HELLO
        h5
          em= config.TAGLINE
        |
        button.button-primary#upload-button
          | &nbsp; Select or drop file(s)…
        button.u-pull-right.button#paste-button
          | &nbsp; Paste…
        .hidden#paste-wrap
          textarea.u-full-width.u-max-full-width#paste-box(placeholder='Paste content…')
          button.u-pull-right.button-primary#paste-submit-button
            | &nbsp; Submit
        p!= config.DESCRIPTION

  // Uploaded file section
  .preview
    .container#preview
